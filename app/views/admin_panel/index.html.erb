<div class="container">
	<div class="row">
        <div class="box">
          <div class="col-lg-12 text-center">
            <div id="carousel-example-generic" class="carousel slide"> 
              <!-- Wrapper for slides -->
              <div class="carousel-inner">
                <div class="item active"> 
									<h1>Control panel</h1>
									<% if signed_in? %>
										<div class="span8">
      								<ol class="microposts">
      									<% @photo_adds.each do |photo| %>
      									<div class="column2">
      										<%= thumb_for photo %>
        									<%= render photo %>       								
        								</div>
      									<% end %>
      								</ol>
      								<br>
      								<div class="paginate">
          							<%= will_paginate @photo_adds %>
          						</div>
      								<br>
      								<section>
        								<%= render 'shared/photo_add_form' %>
      								</section>
  									</div>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
	</div>
</div>