<% provide(:title, 'Portfolio') %> 
<div class="container">
	<div class="row">
        <div class="box">
          <div class="col-lg-12 text-center">
            <div id="carousel-example-generic" class="carousel slide"> 
              <!-- Wrapper for slides -->
              <div class="carousel-inner">
                <div class="item active">              	   
                  <%= photo_for @photo_add %> 
                  <% photo = @photo_adds[0] %>
                  <br>
                  <div class="opis"><%= if photo != nil
                                        photo.content
                                        else "Sample foto"
                                        end %></div>                            
                </div>
              </div>
            </div>
          </div>
          <div class="paginate">
          <%= will_paginate @photo_adds %>
          </div>
        </div>
	</div>
</div>

