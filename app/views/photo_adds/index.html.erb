<% provide(:title, 'Portfolio') %> 
<div class="container">
	<div class="row">
        <div class="box">
          <div class="col-lg-12 text-center">
            <div id="carousel-example-generic" class="carousel slide"> 
              <!-- Wrapper for slides -->
              <div class="carousel-inner">
                <div class="item active">
                  <ul class="microposts"> 
                    <% if @photo_adds.size != 0 %> 
                      <% @photo_adds.each do |photo| %>
                        <div class="column3">
                          <%= link_to main_page_thumb_for(photo), photo %>
                          <br>
                        </div>
                      <% end %>
                    <% else %>
                      <%= image_tag("bober.jpg") %>
                    <%end %>  
                  </ul>                         
                </div>
              </div>
            </div>
          </div>
          <div class="paginate">
            <%= will_paginate @photo_adds %>
          </div> 
        </div>
	</div>
</div>